# Let go through the images,css and js and send everything else to index.php
RewriteRule ^(js|vendor|css|images|uploads)/.*$ - [NC,QSA,L]
RewriteRule ^backstage/tmp/.*$ - [NC,QSA,L]
RewriteRule ^(en|fr)/backstage/.*$ backstage/index.php?lang=$1 [NC,QSA,L]
RewriteRule ^(en|fr)/.*$ index.php?lang=$1 [NC,QSA,L]

# RewriteCond to prevent a double redirection...
RewriteCond %{REQUEST_URI} !backstage/index\.php
RewriteRule ^.*$ index.php [NC,QSA,L]
